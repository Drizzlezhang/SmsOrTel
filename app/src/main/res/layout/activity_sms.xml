<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/sms_ok_linear_top"

        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="0dp"
            app:met_floatingLabel="normal"
            app:met_primaryColor="#80cbc4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:textColor="#000000"
            android:hint="请输入号码"
            android:id="@+id/sms_ok_to"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:background="@mipmap/ic_contact"
            android:id="@+id/sms_ok_choose_contact"/>
    </LinearLayout>
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColor="#000000"
              app:met_maxCharacters="0"
            app:met_primaryColor="#80cbc4"
            android:layout_gravity="center_vertical"
            android:hint="请输入短信内容"
        app:met_clearButton="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            app:met_floatingLabel="normal"
            android:id="@+id/msg_input"
            android:layout_below="@id/sms_ok_linear_top"/>

    <info.hoang8f.widget.FButton
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="快速选择"
        android:textColor="#ffffff"
        fbutton:buttonColor="#3d5afe"
        android:drawableRight="@mipmap/ic_trending_neutral_white_48dp"
        android:gravity="center"
        fbutton:cornerRadius="20dp"
        android:layout_below="@+id/msg_input"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/sms_ok_choose"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:id="@+id/sms_ok_linear">

        <com.drizzle.app.smsortel.model.RippleView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#ffffff"
            android:text="选择日期"
            android:layout_weight="1"
            ripple:alphaFactor="0.7"
            ripple:rippleColor="#c5cae9"
            ripple:hover="true"
            android:id="@+id/sms_ok_choose_date"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#7986cb"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <com.drizzle.app.smsortel.model.RippleView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#ffffff"
            android:text="选择时间"
            android:layout_weight="1"
            ripple:alphaFactor="0.7"
            ripple:rippleColor="#c5cae9"
            ripple:hover="true"
            android:id="@+id/sms_ok_choose_time"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7986cb"
       android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@id/sms_ok_linear"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sms_ok_time_linear"
        android:layout_above="@id/sms_ok_linear">
        <TextView
            android:layout_width="0dp"
            android:gravity="right|center_vertical"
            android:textSize="15sp"
            android:text="您选择了"
            android:layout_weight="5"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textSize="15sp"
            android:text="    "
            android:gravity="center"
            android:id="@+id/sms_ok_year"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:textSize="15sp"
            android:text="年"
            android:layout_weight="1"
            android:gravity="center"

            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="  "
            android:gravity="center"
            android:id="@+id/sms_ok_month"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:textSize="15sp"
            android:text="月"
            android:layout_weight="1"
            android:gravity="center"

            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="15sp"
            android:text="  "
            android:gravity="center"
            android:id="@+id/sms_ok_day"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:textSize="15sp"
            android:text="日"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="2"
            android:text="  "
            android:id="@+id/sms_ok_hour"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:textSize="15sp"
            android:text=":"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="2"
            android:text="  "
            android:id="@+id/sms_ok_minute"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:textSize="15sp"
            android:text="发送短信"
            android:layout_weight="5"
            android:gravity="left|center_vertical"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</RelativeLayout>
